{
    "compilerOptions": {
      "moduleResolution": "node",
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "es6",
      "target": "es5",
      "jsx": "react",
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": "src",
      "paths": {
        "@src": ["/"],
        "@components": ["components"],
        "@pages": ["pages"],
        "@styles": ["styles"],
      }
    },
    "include": [
      "src",
      "./typings/**/*.d.ts"
    ],
    "exclude": ["node_modules", "dist"]
  }