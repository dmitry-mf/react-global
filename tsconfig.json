{
  "allowSyntheticDefaultImports": true,
  "experimentalDecorators": true,
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "preserve",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "baseUrl": "src",
    "paths": {
      "@src": [
        "src"
      ],
      "@components/*": [
        "components"
      ],
      "@pages/*": [
        "pages"
      ],
      "@styles/*": [
        "styles"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src",
    "./typings/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
